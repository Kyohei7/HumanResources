<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".InputActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Input data"
        android:textColor="@color/colorText"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_form_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248" />

    <EditText
        android:id="@+id/et_fullnames"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:background="@drawable/roundedcorner"
        android:fontFamily="@font/roboto_thin_italic"
        android:hint="Full Name"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.077" />

    <EditText
        android:id="@+id/et_emails"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:background="@drawable/roundedcorner"
        android:fontFamily="@font/roboto_thin_italic"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_fullnames"
        app:layout_constraintVertical_bias="0.059" />

    <EditText
        android:id="@+id/et_skills"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:background="@drawable/roundedcorner"
        android:fontFamily="@font/roboto_thin_italic"
        android:hint="Skill"
        android:paddingLeft="10dp"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_emails"
        app:layout_constraintVertical_bias="0.085" />

    <EditText
        android:id="@+id/et_phones"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:background="@drawable/roundedcorner"
        android:fontFamily="@font/roboto_thin_italic"
        android:hint="Phone"
        android:paddingLeft="10dp"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_skills"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/et_githubs"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:background="@drawable/roundedcorner"
        android:fontFamily="@font/roboto_thin_italic"
        android:hint="Github"
        android:paddingLeft="10dp"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phones"
        app:layout_constraintVertical_bias="0.134" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="228dp"
        android:layout_height="42dp"
        android:background="@drawable/roundedcorner1"
        android:fontFamily="@font/roboto_light"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_githubs"
        app:layout_constraintVertical_bias="0.447" />


</androidx.constraintlayout.widget.ConstraintLayout>